// Find the item that has minimum weight
select * from  items where weight = (select Max(weight) from items);


// Find the different warehouses in “Pune”
select * from warehouses where location = 'Lucknow';

// Find the details of items ordered by a customer “Mr. Patil”
SELECT * 
FROM orders
INNER JOIN CUSTOMERS
ON orders.customer_id = customers.customer_id
WHERE customers.customer_name = 'NAME 1';

// Find a Warehouse which has maximum stores
SELECT * 
FROM warehouses
JOIN (
        SELECT warehouse_id, COUNT(warehouse_id) as store_count FROM stores GROUP BY warehouse_id
) as t
ON warehouses.warehouse_id = t.warehouse_id
ORDER BY t.store_count DESC
LIMIT 1;

// Find an item which is ordered for a minimum number of times
SELECT * 
FROM items
JOIN (SELECT item_id, COUNT(item_id) as times_ordered
    FROM order_items
    GROUP BY item_id
) AS t
ON t.item_id = items.item_id
ORDER BY t.times_ordered
LIMIT 1;

// Find the detailed orders given by each customer
SELECT * 
FROM customers
JOIN orders 
ON orders.customer_id = customers.customer_id
JOIN order_items
ON order_items.order_id = orders.order_id
JOIN items
ON items.item_id = order_items.item_id;
